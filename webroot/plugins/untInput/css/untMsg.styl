.untMsg
	color #000
	font-size 9pt
	height auto
	margin 10px
	padding 10px
	text-align left
	width auto

.untMsgWrapper
	display inline-block

.untMsgTitle
	font-size 10pt
	font-weight bold
	margin-bottom 5px

.untMsgContent
	display inline-block
	letter-spacing -0.1px
	vertical-align middle

.untMsgIcon
	display none
	border thin inset #aaa
	margin-right 50px
	padding 5px
	vertical-align middle

.untMsgErr
	background-color #edd
	border thin solid red

.untMsgOk
	background-color #ded
	border thin solid green

.untMsgWrng
	background-color #f5efcf
	border thin solid #ffdd00