.untWinBG
	background #ddd url('../images/default/diagonals_bg.png')
	left 0
	opacity 0.5
	position fixed
	top 0
	z-index 10

.untWin
	background-color #ccc
	border-radius 7px
	box-shadow 0px 0px 10px #555
	height auto
	padding 8px
	opacity 1
	position absolute
	transition top 1s ease
	width auto
	z-index 10

.untWinHeader
	background-color #d8a054
	border thin solid sienna
	border-bottom none
	color #eee
	font-size 1.2em
	padding 5px 0
	padding-left 20px
	text-align left
	text-shadow #333 0px 1px 0px

.untWinContent
	background-color white
	border thin solid #aaa
	border-bottom thin solid #ccc
	border-top none
	padding 10px 10px
	word-wrap break-word

.untWinFooter
	text-align center
	background-color #eee
	border thin solid #aaa
	border-top none
	padding 5px

	.untBtn
		font-size 0.9em
		margin 0 10px